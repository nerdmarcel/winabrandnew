# File: composer.json
# Location: Root directory

{
    "name": "winabn/competition-platform",
    "description": "WinABN - Interactive competition platform with quiz games and prize fulfillment",
    "type": "project",
    "version": "1.0.0",
    "keywords": ["competition", "quiz", "games", "prizes", "php"],
    "license": "proprietary",
    "authors": [
        {
            "name": "WinABN Development Team",
            "email": "dev@winabn.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-pdo": "*",
        "ext-curl": "*",
        "ext-openssl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-gd": "*",
        "mollie/mollie-api-php": "^3.0",
        "stripe/stripe-php": "^10.0",
        "phpmailer/phpmailer": "^6.8",
        "firebase/php-jwt": "^6.8",
        "bacon/bacon-qr-code": "^2.0",
        "spomky-labs/otphp": "^11.0",
        "guzzlehttp/guzzle": "^7.7",
        "vlucas/phpdotenv": "^5.5",
        "monolog/monolog": "^3.4",
        "nesbot/carbon": "^2.68",
        "ramsey/uuid": "^4.7",
        "league/csv": "^9.10",
        "intervention/image": "^2.7",
        "tijsverkoyen/css-to-inline-styles": "^2.2",
        "geocoder-php/google-maps-provider": "^4.7",
        "geocoder-php/geoip2-provider": "^4.3",
        "symfony/rate-limiter": "^6.3",
        "symfony/cache": "^6.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.2",
        "mockery/mockery": "^1.6",
        "fakerphp/faker": "^1.23",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "friendsofphp/php-cs-fixer": "^3.21",
        "pestphp/pest": "^2.8",
        "symfony/var-dumper": "^6.3"
    },
    "autoload": {
        "psr-4": {
            "WinABN\\": "src/",
            "WinABN\\Controllers\\": "controllers/",
            "WinABN\\Models\\": "models/",
            "WinABN\\Core\\": "core/",
            "WinABN\\SSO\\": "sso/"
        },
        "files": [
            "core/Autoloader.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "WinABN\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix",
        "phpstan": "phpstan analyse",
        "quality": [
            "@cs-check",
            "@phpstan",
            "@test"
        ],
        "post-install-cmd": [
            "@php -r \"if (!file_exists('.env')) { copy('.env.example', '.env'); echo 'Created .env file from .env.example\\n'; }\""
        ],
        "post-update-cmd": [
            "@php -r \"echo 'Remember to run database migrations if needed\\n';\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    }
}
