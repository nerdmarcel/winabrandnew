# =============================================
# Win a Brand New - Environment Configuration
# File: /.env.example
# Version: 1.0
# =============================================

# Copy this file to .env and configure with your actual values
# This file contains all environment variables needed for the application

# =============================================
# APPLICATION SETTINGS
# =============================================

# Application
APP_URL=https://your-domain.com
APP_DEBUG=false
APP_TIMEZONE=Europe/London

# Admin Session Configuration
ADMIN_SESSION_TIMEOUT=28800

# User Location (for currency/tax defaults)
DEFAULT_USER_COUNTRY=GB
DEFAULT_USER_CITY="London"

# =============================================
# DATABASE CONFIGURATION
# =============================================

# MySQL Database Connection
DB_HOST=localhost
DB_NAME=win_brand_new
DB_USER=your_db_user
DB_PASSWORD=your_secure_db_password
DB_PORT=3306
DB_CHARSET=utf8mb4

# =============================================
# PAYMENT PROVIDERS
# =============================================

# Mollie Payment Provider (Primary)
MOLLIE_API_KEY=test_xxxxxxxxxxxxxxxxxxxxxxxxxx
MOLLIE_WEBHOOK_SECRET=your_mollie_webhook_secret

# Stripe Payment Provider (Backup - set STRIPE_ENABLED=true to activate)
STRIPE_API_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_ENABLED=false

# =============================================
# EMAIL CONFIGURATION
# =============================================

# SMTP Email Settings
MAIL_HOST=smtp.your-provider.com
MAIL_PORT=587
MAIL_USERNAME=your_email@domain.com
MAIL_PASSWORD=your_email_password
MAIL_FROM=noreply@your-domain.com
MAIL_FROM_NAME="Win a Brand New"
MAIL_ENCRYPTION=tls

# =============================================
# WHATSAPP BUSINESS API
# =============================================

# Meta WhatsApp Business API Configuration
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token
WHATSAPP_RATE_LIMIT_PER_MINUTE=10

# =============================================
# EXCHANGE RATES API
# =============================================

# Currency Exchange Rate API (ExchangeRate-API.com or Fixer.io)
EXCHANGE_API_KEY=your_exchange_api_key
EXCHANGE_API_URL=https://api.exchangerate-api.com/v4/latest/
EXCHANGE_API_PROVIDER=exchangerate-api

# =============================================
# SSO PROVIDERS (OPTIONAL)
# =============================================

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Facebook OAuth Configuration
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Apple Sign In Configuration
APPLE_SERVICE_ID=your.apple.service.id
APPLE_TEAM_ID=YOUR_TEAM_ID
APPLE_KEY_ID=YOUR_KEY_ID
APPLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"

# =============================================
# FRAUD DETECTION & SECURITY
# =============================================

# Fraud Detection Settings
FRAUD_DETECTION_ENABLED=true
FRAUD_MIN_ANSWER_TIME=0.5
FRAUD_MAX_DAILY_PARTICIPATIONS=5
FRAUD_TOKEN_ATTEMPTS_PER_HOUR=4
FRAUD_IP_BLOCK_DURATION=86400

# Security Configuration
CSRF_TOKEN_LIFETIME=3600
SESSION_LIFETIME=7200
PASSWORD_HASH_ALGORITHM=PASSWORD_ARGON2ID
RATE_LIMIT_LOGIN_ATTEMPTS=5
RATE_LIMIT_LOGIN_WINDOW=900

# =============================================
# TAX CONFIGURATION
# =============================================

# Default Tax Configuration
DEFAULT_VAT_RATE=20
DEFAULT_VAT_COUNTRY=GB
TAX_INCLUSIVE_PRICING=true

# =============================================
# CURRENCY CONFIGURATION
# =============================================

# Supported currencies and defaults
DEFAULT_CURRENCY=GBP
SUPPORTED_CURRENCIES=GBP,EUR,USD,CAD,AUD

# Currency display formatting
CURRENCY_SYMBOL_POSITION=before
CURRENCY_DECIMAL_PLACES=2

# =============================================
# FILE STORAGE & UPLOADS
# =============================================

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
UPLOAD_PATH=/uploads

# =============================================
# CACHE & PERFORMANCE
# =============================================

# Cache Configuration
CACHE_DRIVER=file
CACHE_LIFETIME=3600

# OPcache Settings (for production)
OPCACHE_ENABLED=true
OPCACHE_VALIDATE_TIMESTAMPS=false

# =============================================
# LOGGING & MONITORING
# =============================================

# Log Configuration
LOG_LEVEL=info
LOG_PATH=/var/log/winabrandnew
LOG_MAX_FILES=30

# Application Logs
LOG_APP_ENABLED=true
LOG_SECURITY_ENABLED=true
LOG_AUDIT_ENABLED=true
LOG_PAYMENTS_ENABLED=true
LOG_QUEUE_ENABLED=true

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_PAGE_LOAD_THRESHOLD=2000
PERFORMANCE_API_RESPONSE_THRESHOLD=500

# =============================================
# QUEUE SYSTEM
# =============================================

# Queue Processing Configuration
QUEUE_WORKER_ENABLED=true
QUEUE_BATCH_SIZE=50
QUEUE_MAX_ATTEMPTS=3
QUEUE_RETRY_DELAY=60

# Email Queue Settings
EMAIL_QUEUE_ENABLED=true
EMAIL_PRIORITY_HIGH=1
EMAIL_PRIORITY_NORMAL=2
EMAIL_PRIORITY_LOW=3

# WhatsApp Queue Settings
WHATSAPP_QUEUE_ENABLED=true
WHATSAPP_MESSAGE_RETRY_ATTEMPTS=3
WHATSAPP_RATE_LIMIT_QUEUE=true

# =============================================
# BACKUP & MAINTENANCE
# =============================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups
BACKUP_SCHEDULE_DAILY=true

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System maintenance in progress. Please try again later."
MAINTENANCE_BYPASS_IPS=127.0.0.1,::1

# =============================================
# ANALYTICS & TRACKING
# =============================================

# Analytics Configuration
ANALYTICS_ENABLED=true
CONVERSION_TRACKING_ENABLED=true
UTM_TRACKING_ENABLED=true

# Event Tracking
TRACK_GAME_EVENTS=true
TRACK_PAYMENT_EVENTS=true
TRACK_CONVERSION_EVENTS=true

# =============================================
# BUSINESS LOGIC CONFIGURATION
# =============================================

# Game Configuration
DEFAULT_MAX_PLAYERS=1000
DEFAULT_QUESTION_TIMEOUT=10
TIMER_PRECISION_MICROSECONDS=true

# Round Management
AUTO_RESTART_ROUNDS=true
CONCURRENT_ROUND_PROTECTION=true

# Discount System
REPLAY_DISCOUNT_PERCENTAGE=10
REFERRAL_DISCOUNT_PERCENTAGE=10
DISCOUNT_VALIDITY_HOURS=24
BUNDLE_PRICING_ENABLED=true

# Prize Claim Settings
CLAIM_TOKEN_EXPIRY_DAYS=30
CLAIM_REMINDER_DAYS=7
UNCLAIMED_PRIZE_REMINDER=true

# =============================================
# GEOLOCATION & IP SERVICES
# =============================================

# IP Geolocation Service
GEOLOCATION_ENABLED=true
GEOLOCATION_API_KEY=your_geolocation_api_key
GEOLOCATION_PROVIDER=ipgeolocation
GEOLOCATION_CACHE_DURATION=86400

# =============================================
# DEVELOPMENT & TESTING
# =============================================

# Development Settings (set to false in production)
DEVELOPMENT_MODE=false
DEBUG_SQL_QUERIES=false
DEBUG_TIMING_LOGS=false

# Testing Configuration
TESTING_MODE=false
TEST_PAYMENT_MODE=false
MOCK_EXTERNAL_APIS=false

# =============================================
# FEATURE FLAGS
# =============================================

# Feature toggles
FEATURE_SSO_LOGIN=false
FEATURE_WHATSAPP_NOTIFICATIONS=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_REFERRAL_SYSTEM=true
FEATURE_BUNDLE_PRICING=true
FEATURE_FRAUD_DETECTION=true
FEATURE_ANALYTICS_TRACKING=true

# =============================================
# EXTERNAL INTEGRATIONS
# =============================================

# Additional API Keys
RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# CDN Configuration
CDN_ENABLED=false
CDN_URL=https://cdn.your-domain.com

# =============================================
# CRON JOBS CONFIGURATION
# =============================================

# Cron job settings
CRON_EMAIL_WORKER_ENABLED=true
CRON_WHATSAPP_WORKER_ENABLED=true
CRON_EXCHANGE_RATE_UPDATER=true
CRON_BACKUP_ENABLED=true
CRON_CLEANUP_ENABLED=true

# Cron schedules (in cron format)
CRON_EXCHANGE_RATE_SCHEDULE="0 6 * * *"
CRON_BACKUP_SCHEDULE="0 2 * * *"
CRON_CLEANUP_SCHEDULE="0 3 * * *"

# =============================================
# HEALTH MONITORING
# =============================================

# Health check endpoints
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_DATABASE=true
HEALTH_CHECK_QUEUE=true
HEALTH_CHECK_EXTERNAL_APIS=true

# Alert thresholds
ALERT_DATABASE_RESPONSE_THRESHOLD=1000
ALERT_QUEUE_BACKLOG_THRESHOLD=1000
ALERT_EMAIL_FAILURE_THRESHOLD=10

# =============================================
# END OF CONFIGURATION
# =============================================

# Note: Remember to set appropriate file permissions for your .env file:
# chmod 600 .env
#
# Never commit your actual .env file to version control!
# Keep sensitive information secure and use different values for
# development, staging, and production environments.
